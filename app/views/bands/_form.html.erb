<% if @band.persisted? %>
  <% action = band_url(@band.id) %>
  <% value = "patch" %>
  <% button_words = "Update Band Info"%>
<% else %>
  <% action = bands_url %>
  <% value = "post" %>
  <% button_words = "Create New Band!"%>
<% end %>

<form action="<%= action %>" method="post">
<input type="hidden" name="_method" value="<%= value %>">
<%= authentic_token %>

  <label for="band_name"> Name </label>
  <input type="text" name="band[name]" id="band_name">
  <button> <%= button_words %></button>
</form>
